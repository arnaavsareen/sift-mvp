# API Service Configuration
API_VERSION=1.0.0
PROJECT_NAME="SIFT API Service"
PROJECT_DESCRIPTION="API Service for the SIFT PPE Detection Platform"
DEBUG=true
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/sift
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=sift-frames-bucket
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/sift-detection-queue

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300  # 5 minutes

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100  # requests per minute
RATE_LIMIT_BURST=120  # burst capacity

# Logging
LOG_LEVEL=INFO
LOG_JSON=false

# Background Tasks
MAX_WORKERS=4
TASK_RETRY_LIMIT=3
